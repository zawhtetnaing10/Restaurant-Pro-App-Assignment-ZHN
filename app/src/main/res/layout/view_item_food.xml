<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="250dp"
	android:layout_marginTop="@dimen/margin_medium_2"
	android:elevation="0dp"
	app:cardBackgroundColor="@color/colorPrimary"
	app:cardCornerRadius="@dimen/margin_medium_2">


	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="@dimen/margin_medium_2">

		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="@dimen/margin_medium_3"
			android:background="@drawable/top_gradient_background"
			android:elevation="@dimen/margin_small" />

		<ImageView
			android:id="@+id/ivFood"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/french_fries" />

	</FrameLayout>


	<RelativeLayout
		android:id="@+id/rlContent"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:elevation="@dimen/margin_medium">


		<FrameLayout
			android:id="@+id/flShopPhoto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_medium_3"
			android:layout_marginTop="@dimen/margin_medium_3"
			android:background="@drawable/circle_background_grey">

			<ImageView
				android:id="@+id/ivShop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_shop_light_grey" />

		</FrameLayout>

		<TextView
			android:id="@+id/tvFoodName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/flShopPhoto"
			android:layout_marginStart="@dimen/margin_medium_2"
			android:layout_toEndOf="@id/flShopPhoto"
			android:text="Mexican Bite"
			android:textColor="@android:color/white"
			android:textSize="@dimen/text_regular_2x" />

		<TextView
			android:id="@+id/tvRating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvFoodName"
			android:layout_alignStart="@id/tvFoodName"
			android:layout_marginTop="@dimen/margin_small"
			android:text="4.0"
			android:textColor="@android:color/white" />

		<ImageView
			android:id="@+id/tvStar1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/tvRating"
			android:layout_marginStart="@dimen/margin_small"
			android:layout_marginTop="@dimen/margin_small"
			android:layout_toEndOf="@id/tvRating"
			android:src="@drawable/ic_star_gold_12dp" />

		<ImageView
			android:id="@+id/tvStar2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/tvRating"
			android:layout_marginTop="@dimen/margin_small"
			android:layout_toEndOf="@id/tvStar1"
			android:src="@drawable/ic_star_gold_12dp" />

		<ImageView
			android:id="@+id/tvStar3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/tvRating"
			android:layout_marginTop="@dimen/margin_small"
			android:layout_toEndOf="@id/tvStar2"
			android:src="@drawable/ic_star_gold_12dp" />

		<ImageView
			android:id="@+id/tvStar4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/tvRating"
			android:layout_marginTop="@dimen/margin_small"
			android:layout_toEndOf="@id/tvStar3"
			android:src="@drawable/ic_star_gold_12dp" />

		<ImageView
			android:id="@+id/tvStar5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/tvRating"
			android:layout_marginTop="@dimen/margin_small"
			android:layout_toEndOf="@id/tvStar4"
			android:src="@drawable/ic_star_gold_12dp" />

		<TextView
			android:id="@+id/tvMarks"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@id/tvRating"
			android:layout_marginStart="@dimen/margin_small"
			android:layout_toEndOf="@id/tvStar5"
			android:text="(100)"
			android:textColor="@android:color/white" />

		<FrameLayout
			android:id="@+id/flNearMe"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/flShopPhoto"
			android:layout_alignParentEnd="true"
			android:layout_marginTop="@dimen/margin_medium"
			android:layout_marginEnd="@dimen/margin_medium_2"
			android:background="@drawable/circle_background_blue">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_near_me_white_18dp" />

		</FrameLayout>

		<TextView
			android:id="@+id/tvDescription"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvRating"
			android:layout_alignStart="@id/tvRating"
			android:layout_marginTop="@dimen/margin_medium_3"
			android:lineSpacingMultiplier="1.2"
			android:text="Mexican - 18 Tank House Lane Hip spot for Mexican tepas with a patio Open until 12:00AM"
			android:textColor="@android:color/white" />


	</RelativeLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:background="@drawable/chip_background_grey"
		android:elevation="@dimen/margin_medium_2"
		android:padding="@dimen/margin_medium"
		android:text="N Cedar Saint &amp; Cedar" />


</androidx.cardview.widget.CardView>